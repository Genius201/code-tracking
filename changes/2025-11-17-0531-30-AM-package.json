{
  "name": "comics-united-backend",
  "version": "1.0.0",
  "description": "Backend API for Comics United - Professional Comedy Networking Platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "migrate:status": "knex migrate:status",
    "seed": "knex seed:run",
    "seed:make": "knex seed:make",
    "db:setup": "npm run migrate && npm run seed",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "db:fresh": "knex migrate:rollback --all && npm run migrate && npm run seed",
    "docker:build": "docker build -t comics-united-backend .",
    "docker:run": "docker run -p 3001:3001 comics-united-backend",
    "prepare": "husky install"
  },
  "keywords": [
    "comedy",
    "networking",
    "api",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "Comics United Team",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^7.81.1",
    "@types/stripe": "^8.0.416",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-brute": "^1.0.1",
